{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "LiveCommunalContainerRegistry": {
                "username": "$CONTAINER_REGISTRY_USERNAME_LiveCommunalContainerRegistryusername",
                "password": "$CONTAINER_REGISTRY_PASSWORD_LiveCommunalContainerRegistrypassword",
                "address": "livecommunalcontainerregistry.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  },
                  "Binds":[
                    "/etc/iotedge/offlineStorage/:/iotedge/storage/"
                  ]
                }
              }
            },
            "env": {
              "storageFolder": {
                  "value": "/iotedge/storage/"
              }
            }
          }
        },
        "modules": {
          "modbus47": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.iotedgeModbus.amd64}",
              "createOptions": {
                "HostConfig": {
                  "Devices": [
                    {
                      "PathOnHost": "/dev/ttyUSB0",
                      "PathInContainer": "/dev/ttyUSB0",
                      "CgroupPermissions": "rwm"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "modbusToIoTHub": "FROM /messages/modules/modbus47/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 10800
        }
      }
    },
    "modbus47": {
      "properties.desired": {
        "PublishInterval": "300000",
        "SlaveConfigs": {
          "Slave01": {
            "SlaveConnection": "/dev/ttyUSB0",
            "TcpPort": "502",
            "BaudRate": "9600",
            "DataBits": "8",
            "StopBits": "1",
            "Parity": "NONE",
            "FlowControl": "NONE",
            "HwId": "RussellLea Modbus Master",
            "RetryCount": "5",
            "RetryInterval": "10000",
            "Operations": {
               "Op2_343": {
                  "PollingInterval": "150000",
                  "UnitId": "2",
                  "StartAddress": "30343",
                  "Count": "2",
                  "CorrelationId": "2"
               },
               "Op3_343": {
                  "PollingInterval": "160000",
                  "UnitId": "3",
                  "StartAddress": "30343",
                  "Count": "2",
                  "CorrelationId": "3"
               },
               "Op4_343": {
                  "PollingInterval": "170000",
                  "UnitId": "4",
                  "StartAddress": "30343",
                  "Count": "2",
                  "CorrelationId": "4"
               },
               "Op5_343": {
                  "PollingInterval": "180000",
                  "UnitId": "5",
                  "StartAddress": "30343",
                  "Count": "2",
                  "CorrelationId": "5"
               },
               "Op6_343": {
                  "PollingInterval": "190000",
                  "UnitId": "6",
                  "StartAddress": "30343",
                  "Count": "2",
                  "CorrelationId": "6"
               },
               "Op7_343": {
                  "PollingInterval": "200000",
                  "UnitId": "7",
                  "StartAddress": "30343",
                  "Count": "2",
                  "CorrelationId": "7"
               },
               "Op8_343": {
                  "PollingInterval": "210000",
                  "UnitId": "8",
                  "StartAddress": "30343",
                  "Count": "2",
                  "CorrelationId": "8"
               },
               "Op9_343": {
                  "PollingInterval": "220000",
                  "UnitId": "9",
                  "StartAddress": "30343",
                  "Count": "2",
                  "CorrelationId": "9"
               },
               "Op10_343": {
                  "PollingInterval": "240000",
                  "UnitId": "10",
                  "StartAddress": "30343",
                  "Count": "2",
                  "CorrelationId": "10"
               }
            }
          }
        }
      }
    }
  }
}