{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "LiveCommunalContainerRegistry": {
                "username": "$CONTAINER_REGISTRY_USERNAME_LiveCommunalContainerRegistryusername",
                "password": "$CONTAINER_REGISTRY_PASSWORD_LiveCommunalContainerRegistrypassword",
                "address": "livecommunalcontainerregistry.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  },
                  "Binds":[
                    "/etc/iotedge/offlineStorage/:/iotedge/storage/"
                  ]
                }
              }
            },
            "env": {
              "storageFolder": {
                  "value": "/iotedge/storage/"
              }
            }
          }
        },
        "modules": {
          "modbus": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.iotedgeModbus.amd64}",
              "createOptions": {
                "HostConfig": {
                  "Devices": [
                    {
                      "PathOnHost": "/dev/ttyUSB0",
                      "PathInContainer": "/dev/ttyUSB0",
                      "CgroupPermissions": "rwm"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "modbusToIoTHub": "FROM /messages/modules/modbus/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 10800
        }
      }
    },
    "modbus": {
      "properties.desired": {
        "PublishInterval": "60000",
        "SlaveConfigs": {
          "Slave01": {
            "SlaveConnection": "/dev/ttyUSB0",
            "TcpPort": "502",
            "BaudRate": "9600",
            "DataBits": "8",
            "StopBits": "1",
            "Parity": "ODD",
            "FlowControl": "NONE",
            "HwId": "RusselLea Modbus Master",
            "RetryCount": "5",
            "RetryInterval": "10000",
            "Operations": {
              "Op01_42": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30043",
                 "Count": "2",
                 "DisplayName": "Average Phase Voltage (V)",
                 "CorrelationId": "1"
              },
              "Op01_46": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30047",
                 "Count": "2",
                 "DisplayName": "Average Phase Current (A)",
                 "CorrelationId": "1"
              },
              "Op01_48": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30049",
                 "Count": "2",
                 "DisplayName": "Total Phase Currents (A)",
                 "CorrelationId": "1"
              },
              "Op01_52": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30053",
                 "Count": "2",
                 "DisplayName": "Total Active Power (W)",
                 "CorrelationId": "1"
              },
              "Op01_56": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30057",
                 "Count": "2",
                 "DisplayName": "Total Apparent Power (VA)",
                 "CorrelationId": "1"
              },
              "Op01_60": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30061",
                 "Count": "2",
                 "DisplayName": "Total Reactive Power (VAr)",
                 "CorrelationId": "1"
              },
              "Op01_62": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30063",
                 "Count": "2",
                 "DisplayName": "Total Power Factor (None)",
                 "CorrelationId": "1"
              },
              "Op01_66": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30067",
                 "Count": "2",
                 "DisplayName": "Total Power Factor Phase Angle (Degrees)",
                 "CorrelationId": "1"
              },
              "Op01_70": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30071",
                 "Count": "2",
                 "DisplayName": "Frequency (Hz)",
                 "CorrelationId": "1"
              },
              "Op01_84": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30085",
                 "Count": "2",
                 "DisplayName": "Active Power Demand (W)",
                 "CorrelationId": "1"
              },
              "Op01_86": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30087",
                 "Count": "2",
                 "DisplayName": "Maximum Active Power Demand (W)",
                 "CorrelationId": "1"
              },
              "Op01_100": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30101",
                 "Count": "2",
                 "DisplayName": "Apparent Power Demand (VA)",
                 "CorrelationId": "1"
              },
              "Op01_102": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30103",
                 "Count": "2",
                 "DisplayName": "Maximum Apparent Power Demand (VA)",
                 "CorrelationId": "1"
              },
              "Op01_104": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30105",
                 "Count": "2",
                 "DisplayName": "Neutral Current Demand (A)",
                 "CorrelationId": "1"
              },
              "Op01_106": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30107",
                 "Count": "2",
                 "DisplayName": "Maximum Neutral Current Demand (A)",
                 "CorrelationId": "1"
              },
              "Op01_224": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30225",
                 "Count": "2",
                 "DisplayName": "Neutral Current (A)",
                 "CorrelationId": "1"
              },
              "Op01_248": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30249",
                 "Count": "2",
                 "DisplayName": "Average Phase Voltage THD (%)",
                 "CorrelationId": "1"
              },
              "Op01_250": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30251",
                 "Count": "2",
                 "DisplayName": "Average Phase Current THD (%)",
                 "CorrelationId": "1"
              },
              "Op01_340": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30341",
                 "Count": "2",
                 "DisplayName": "Average Phase to Phase Voltage THD (%)",
                 "CorrelationId": "1"
              },
              "Op01_342": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30343",
                 "Count": "2",
                 "DisplayName": "Total Active Energy (kWh)",
                 "CorrelationId": "1"
              },
              "Op01_344": {
                 "PollingInterval": "60000",
                 "UnitId": "1",
                 "StartAddress": "30345",
                 "Count": "2",
                 "DisplayName": "Total Reactive Energy (kVArh)",
                 "CorrelationId": "1"
              }
            }
          }
        }
      }
    }
  }
}