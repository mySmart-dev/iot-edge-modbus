{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "LiveCommunalContainerRegistry": {
                "username": "$CONTAINER_REGISTRY_USERNAME_LiveCommunalContainerRegistryusername",
                "password": "$CONTAINER_REGISTRY_PASSWORD_LiveCommunalContainerRegistrypassword",
                "address": "livecommunalcontainerregistry.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  },
                  "Binds":[
                    "/etc/iotedge/offlineStorage/:/iotedge/storage/"
                  ]
                }
              }
            },
            "env": {
              "storageFolder": {
                  "value": "/iotedge/storage/"
              }
            }
          }
        },
        "modules": {
          "modbus": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.iotedgeModbus.amd64}",
              "createOptions": {
                "HostConfig": {
                  "Devices": [
                    {
                      "PathOnHost": "/dev/ttyUSB0",
                      "PathInContainer": "/dev/ttyUSB0",
                      "CgroupPermissions": "rwm"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "modbusToIoTHub": "FROM /messages/modules/modbus/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 10800
        }
      }
    },
    "modbus": {
      "properties.desired": {
        "PublishInterval": "60000",
        "SlaveConfigs": {
          "Slave01": {
            "SlaveConnection": "/dev/ttyUSB0",
            "TcpPort": "502",
            "BaudRate": "9600",
            "DataBits": "8",
            "StopBits": "1",
            "Parity": "ODD",
            "FlowControl": "NONE",
            "HwId": "RusselLea Modbus Master",
            "RetryCount": "5",
            "RetryInterval": "10000",
            "Operations": {
              "Op01_0": {
                "PollingInterval": "30000",
                "UnitId": "1",
                "StartAddress": "400001",
                "Count": "4",
                "DisplayName": "Voltage(V)",
                "CorrelationId": "1"
              },
              "Op01_2": {
                "PollingInterval": "30000",
                "UnitId": "1",
                "StartAddress": "400003",
                "Count": "4",
                "DisplayName": "Voltage(V)",
                "CorrelationId": "1"
              },
              "Op01_10": {
                "PollingInterval": "30000",
                "UnitId": "1",
                "StartAddress": "400011",
                "Count": "4",
                "DisplayName": "Voltage(V)",
                "CorrelationId": "1"
              },
              "Op02_0": {
                "PollingInterval": "30000",
                "UnitId": "2",
                "StartAddress": "400001",
                "Count": "4",
                "DisplayName": "Waterlevel(mm)",
                "CorrelationId": "2"
              },
              "Op02_2": {
                "PollingInterval": "30000",
                "UnitId": "2",
                "StartAddress": "400003",
                "Count": "4",
                "DisplayName": "Current(A)",
                "CorrelationId": "2"
              },
              "Op02_10": {
                "PollingInterval": "30000",
                "UnitId": "2",
                "StartAddress": "400011",
                "Count": "4",
                "DisplayName": "Power(W)",
                "CorrelationId": "2"
              }
            }
          }
        }
      }
    }
  }
}