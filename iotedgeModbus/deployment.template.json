{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "LiveCommunalContainerRegistry": {
                "username": "$CONTAINER_REGISTRY_USERNAME_LiveCommunalContainerRegistryusername",
                "password": "$CONTAINER_REGISTRY_PASSWORD_LiveCommunalContainerRegistrypassword",
                "address": "livecommunalcontainerregistry.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  },
                  "Binds":[
                    "/etc/iotedge/offlineStorage/:/iotedge/storage/"
                  ]
                }
              }
            },
            "env": {
              "storageFolder": {
                  "value": "/iotedge/storage/"
              }
            }
          }
        },
        "modules": {
          "modbus26": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.iotedgeModbus.amd64}",
              "createOptions": {
                "HostConfig": {
                  "Devices": [
                    {
                      "PathOnHost": "/dev/ttyUSB0",
                      "PathInContainer": "/dev/ttyUSB0",
                      "CgroupPermissions": "rwm"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "modbusToIoTHub": "FROM /messages/modules/modbus26/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 10800
        }
      }
    },
