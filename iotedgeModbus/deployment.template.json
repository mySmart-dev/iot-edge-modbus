{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "RussellleaImageContainer": {
                "username": "$CONTAINER_REGISTRY_USERNAME_russellleaimagecontainerusername",
                "password": "$CONTAINER_REGISTRY_PASSWORD_rusellleaimagecontainerpassword",
                "address": "russellleaimagecontainer.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "modbus": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.iotedgeModbus.amd64}",
              "createOptions": {
                "HostConfig": {
                  "Devices": [
                    {
                      "PathOnHost": "/dev/ttyUSB0",
                      "PathInContainer": "/dev/ttyUSB0",
                      "CgroupPermissions": "rwm"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "modbusToIoTHub": "FROM /messages/modules/modbus/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "modbus": {
      "properties.desired": {
        "PublishInterval": "10000",
        "SlaveConfigs": {
          "Slave01": {
            "SlaveConnection": "192.168.0.164",
            "TcpPort": "502",
            "HwId": "RusselLea Modbus Master",
            "RetryCount": "5",
            "RetryInterval": "10000",
            "Operations": {
              "Op01_0": {
                "PollingInterval": "30000",
                "UnitId": "1",
                "StartAddress": "400001",
                "Count": "2",
                "DisplayName": "Voltage(V)",
                "CorrelationId": "Power Meter"
              },
              "Op02_2": {
                "PollingInterval": "30000",
                "UnitId": "2",
                "StartAddress": "400003",
                "Count": "2",
                "DisplayName": "Current(A)",
                "CorrelationId": "Water Meter"
              },
              "Op02_9": {
                "PollingInterval": "30000",
                "UnitId": "2",
                "StartAddress": "400010",
                "Count": "5",
                "DisplayName": "Power(W)",
                "CorrelationId": "Water Meter"
              },
              "Op02_0": {
                "PollingInterval": "30000",
                "UnitId": "2",
                "StartAddress": "400001",
                "Count": "1",
                "DisplayName": "Waterlevel(mm)",
                "CorrelationId": "Water Meter"
              },
              "Op01_1": {
                "PollingInterval": "30000",
                "UnitId": "1",
                "StartAddress": "400002",
                "Count": "3",
                "DisplayName": "Voltage(V)",
                "CorrelationId": "Power Meter"
              }
            }
          }
        }
      }
    }
  }
}